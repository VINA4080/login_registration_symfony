{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.style.css') }}">
{% endblock %}

{% block nav %}
    
{% endblock %}

{% block body %}
<body>
    <main class="mx-5">
        <div class="container login mx-5">
            <form class="" method="post">

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                    <h1 class="h3 text-center mb-5 font-weight-bolder">Please sign in</h1>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success border-success border-2 text-center">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                <div class="mt-4">
                    <label class="form-label" for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="mt-4">
                    <label class="form-label" for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <button class="btn btn-lg btn-info mt-4 w-100" type="submit">Sign in</button>
                <div class="text-center mt-3"><a href="{{ path('app_register') }}">Not have account ?</a></div>
            </form>
        </div>
    </main>
</body>
{% endblock %}
